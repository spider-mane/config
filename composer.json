{
  "name": "webtheory/config",
  "type": "library",
  "description": "Directory based configuration with support for lazy resolution of entries",
  "homepage": "https://github.com/spider-mane/config",
  "license": "MIT",
  "authors": [
    {
      "name": "Chris Williams",
      "email": "spider.mane.web@gmail.com",
      "homepage": "https://github.com/spider-mane",
      "role": "Developer"
    }
  ],
  "keywords": [
    "config",
    "webtheory"
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.0",
    "dflydev/dot-access-data": "^3.0"
  },
  "require-dev": {
    "captainhook/captainhook": "^5.10",
    "fakerphp/faker": "^1.16",
    "friendsofphp/php-cs-fixer": "^3.3",
    "hassankhan/config": "^3.0",
    "league/config": "^1.2",
    "mockery/mockery": "^1.4",
    "oscarotero/env": "^2.1",
    "phpbench/phpbench": "@dev",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpunit": "^9.5",
    "psy/psysh": "^0.11.12",
    "spatie/phpunit-watcher": "^1.12",
    "squizlabs/php_codesniffer": "^3.5",
    "vimeo/psalm": "^5.6",
    "vlucas/phpdotenv": "^5.4",
    "webtheory/exterminate": "@dev"
  },
  "suggest": {
    "oscarotero/env": "Needed to use env function with \"$default\" parameter"
  },
  "autoload": {
    "psr-4": {
      "WebTheory\\Config\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "analyze": "vendor/bin/phpstan analyze",
    "test": "vendor/bin/phpunit",
    "watch": "vendor/bin/phpunit-watcher watch",
    "check": "vendor/bin/phpcs",
    "bench": "vendor/bin/phpbench",
    "shell": "vendor/bin/psysh",
    "collect": "vendor/bin/var-dump-server",
    "hooks": "vendor/bin/captainhook",
    "build": [
      "@check",
      "@analyze",
      "@test"
    ],
    "setup": [
      "composer install",
      "cp -n .env.example .env",
      "bin/build-paths"
    ],
    "style": [
      "vendor/bin/php-cs-fixer fix --verbose",
      "vendor/bin/phpcbf"
    ]
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "extra": {
    "build-paths": {
      "build": {
        "phpunit": {},
        "php-cs-fixer": {}
      },
      "logs": {}
    }
  }
}
