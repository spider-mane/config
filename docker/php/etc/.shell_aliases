EDITOR="${EDITOR:-code}"
CONFIGFILES=(
  ~/.shell_aliases
  ~/.shell_functions
  ~/.bashrc
  ~/.bash_profile
  ~/.zshrc
  ~/.zprofile
  ~/.zshenv
  ~/.profile
  ~/.p10k.zsh
  ~/.dircolors
  ~/.inputrc
)

alias shellconfig="$EDITOR ${CONFIGFILES[*]}"

# Directory navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias \*="cd $APP"
alias ~="cd ~"

# Directory listings
alias ls='ls -hF --color' # classify files in color
alias ll='ls -AlF'        # fully detailed long list
alias lb='ls -lF'         # abridged long list
alias la='ls -A'          # all but . and ..
alias l='ls -ACF'         # display in columns
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'

# Grep
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# Bat
alias bathelp="bat --plain --language=help"
alias bhelp="bathelp"
alias bgrep="batgrep"
alias bigrep="batgrep -i"
alias bman="batman"

# Misc
alias less="less -r"   # raw control characters
alias whence="type -a" # where, of a sort

# Unset unneeded variables
unset EDITOR CONFIGFILES

## SHELL SPECIFIC ##
